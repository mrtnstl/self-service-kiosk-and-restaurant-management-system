{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "$schema": "https://www.schemastore.org/tsconfig",
    "display": "Node 24",
    "_version": "24.0.0",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        
        "lib": [
            "es2024",
            "ESNext.Array",
            "ESNext.Collection",
            "ESNext.Error",
            "ESNext.Iterator",
            "ESNext.Promise"
        ],
        "module": "nodenext",
        "target": "es2024",

        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16"
    },
    "include": ["src/**/*"],
    "exclude": ["src/tests/**/*"]
}